<!DOCTYPE HTML>

<html>
  <head>
    <title>MEETUP</title>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <!-- <meta name="viewport" content="width=device-width initial-scale=1.0"> -->
    <meta name="viewport" content="width=device-width initial-scale=0.39">
    <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600|Arvo:700" rel="stylesheet" type="text/css" />
  </head>

  <body class="no-sidebar" id="mobile">

    <!---flash messages require by Devise -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  <!-- Header Wrapper -->
    <div id="header-wrapper">

      <!-- Header -->
        <div id="header" class="container">

          <!-- Logo -->
            <h1 id="logo"><a href="/">MeetUp</a></h1>
            <p>Helping you find friends in crowded places.</p>

          <!-- Nav -->
            <nav id="nav">
              <ul>
                <li><a class="fa fa-home" href="/"><span>Home</span></a></li>
                <li>
                  <a href="/about" class="fa fa-info-circle"><span>About</span></a>
                </li>
                <li><a href="" class="fa fa-mobile-phone" id="overlay_trigger"><span>Get Link</span></a></li>
                  <div id="overlay2">
                      <p>Copy this link: <input type="text" id="url_link"/></p>
                  </div>

                <!-- <li><a class="fa fa-cog" href="/users/sign_up"><span>Sign Up</span></a></li>
                <li><a class="fa fa-retweet" href="/users/sign_in"><span>Log In</span></a></li>
                <li><a class="fa fa-sign-out" href="/users/sign_out"><span>Log Out</span></a></li> -->
              </ul>
            </nav>
        </div>

    </div>

  <!-- Main Wrapper -->
    <div id="main-wrapper">

      <!-- Main -->
        <div id="main" class="container">
          <div id= "mobile_row" class="row">

            <!-- Content -->
              <div id="content" class="12u skel-cell-important">

                <!-- Post -->
                  <article class="is-post">
                    <header>
                    </header>
                    <%= yield %>
                  </article>

              </div>

          </div>
        </div>

    </div>

  <!-- Footer Wrapper -->
    <div id="footer-wrapper">

      <!-- Footer -->
        <div id="footer" class="container">
          <header>


          </header>
          <div class="contact_row">
            <div id="left_foot" class="8u">
              <h2 id="contact_left">Questions or comments?</h2>
              <section>
                <form method="post" action="#">
                  <div class="row half">
                    <div class="6u">
                      <input name="name" placeholder="Name" type="text" class="text" />
                    </div>
                    <div class="6u">
                      <input name="email" placeholder="Email" type="text" class="text" />
                    </div>
                  </div>
                  <div class="row half">
                    <div class="12u">
                      <textarea name="message" placeholder="Message"></textarea>
                    </div>
                  </div>
                  <div class="row half">
                    <div class="12u">
                      <a href="#" class="button button-icon fa fa-envelope">Send Message</a>
                    </div>
                  </div>
                </form>
              </section>
            </div>
            <div id="right_foot" class="4u">
              <h2 id="contact_right"><strong>Get in touch</strong></h2>
              <section>
                <div id="contact">
                  <ul class="icons 6u">
                    <li class="fa fa-home">
                      160 Pearl Street<br />
                      New York, NY 10005<br />
                      USA
                    </li>
                    <li class="fa fa-phone">
                      (212) 555-0980
                    </li>
                    <li class="fa fa-envelope">
                      <a href="#">imon.stevenson@gmail.com</a>
                    </li>
                    <li class="fa fa-twitter">
                      <a href="http://twitter.com/imonstevenson">@imonstevenson</a>
                    </li>
                    <li class="fa fa-google-plus">
                      <a href="#">google+</a>
                    </li>
                  </ul>
                </div>
              </section>
            </div>
          </div>
        </div>

      <!-- Copyright -->
        <div id="copyright" class="container">
          <ul class="links">
            <li>&copy; MeetUp. All rights reserved</li>
            <li id="noshow">Map: <a href="http://leafletjs.com/">Leaflet.js</a></li>
          </ul>
        </div>

    </div>


</body>
</html>
